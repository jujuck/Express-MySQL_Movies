{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:prettier/recommended" // Make this the last element so prettier config overrides other formatting rules
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "jest"
    ],
    "ignorePatterns": ["migrations/**"],
    "rules": {
        "prettier/prettier": ["error", {}, { usePrettierrc: true }],
        "no-console": "off",
        "camelcase": "off",
        "no-await-in-loop": "off"
    }
}
